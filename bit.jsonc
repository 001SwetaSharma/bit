{
  "$schema": "",
  "workspace": {
    // this is a workaround to let "bit link --rewire" generate modules "@bit/bit.core.ext-name"
    // and not "@bit/core.ext-name". once staging support the new owner feature, it can be changed
    // back to "bit.core".
    "defaultScope": "bit.core",
    "workspace": {},
    "dependencyResolver": {}
  },
  "dependencyResolver": {
    "packageManager": "npm",
    "strictPeerDependencies": true,
    "extraArgs": []
  },
  "variants": {
    "*": {
      "extensions": {
        "typescript": {},
        "bit.core/compile": {
          "compiler": "@bit/bit.core.typescript"
        }
      },
      // why this is needed? try to automate this
      "devDependencies": {
        "@types/node": "^12.12.25"
      }
    },
    "cli": {
      "extensions": {
        "typescript": {},
        "bit.core/compile": {
          "compiler": "@bit/bit.core.typescript"
        }
      },
      "bin": "bin/bit.js",
      // why this is needed? try to automate this
      "devDependencies": {
        "@types/node": "^12.12.25"
      }
    },
    "flows": {
      // could be nicer to not repeat myself, I only want to add devDependency for this component
      // but keep the same "extensions" as other components in the general "*"
      "extensions": {
        "typescript": {},
        "bit.core/compile": {
          "compiler": "@bit/bit.core.typescript"
        }
      },
      "devDependencies": {
        "@types/mocha": "^7.0.2"
      }
    },
    // override typescript to not get compiled
    "typescript": {
      "extensions": {}
    }
  }
}